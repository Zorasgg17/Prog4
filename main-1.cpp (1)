//Ford Fulkerson
#include <iostream>
#include <limits.h>
#include <queue>
#include <string.h>
using namespace std;

// num of v
#define V 6

// s e start t e end imat i parent
bool bfs(int rGraph[V][V], int s, int t, int parent[])
{
    // E visited array and mark all v as not visited
    bool visited[V];
    memset(visited, 0, sizeof(visited));

    // E queue, enqueue source v and mark source v as visited
    queue<int> q;
    q.push(s);
    visited[s] = true;
    parent[s] = -1;

    // BFS Loop
    while (!q.empty()) {
        int u = q.front();
        q.pop();

        for (int v = 0; v < V; v++) {
            if (visited[v] == false && rGraph[u][v] > 0) {
                // If connection to sink node, no more BFS needed
                // set parent and return true
                if (v == t) {
                    parent[v] = u;
                    return true;
                }
                q.push(v);
                parent[v] = u;
                visited[v] = true;
            }
        }
    }

    //no sink, return false
    return false;
}

// ret maxflow from s to t
int fordFulkerson(int graph[V][V], int s, int t)
{
    int u, v;

    // E residual graph, fill res graph with given capacities in the og graph as
    // residual capacities in res graph
    int rGraph[V]
              [V]; // graph[u][v] is for cap of u to v if cap nE value is 0
    for (u = 0; u < V; u++)
        for (v = 0; v < V; v++)
            rGraph[u][v] = graph[u][v];

    int parent[V]; // array is filled by BFS and stores path

    int max_flow = 0; // no flow initially

    // Augment flow while E path from source to start to end
    while (bfs(rGraph, s, t, parent)) {
        // Find minimum residual capacity of the edges along
        // the path filled by BFS. Or we can say find the
        // maximum flow through the path found.
        int path_flow = INT_MAX;
        for (v = t; v != s; v = parent[v]) {
            u = parent[v];
            path_flow = min(path_flow, rGraph[u][v]);
        }

        // update res cap of the e and reverse e along path
        for (v = t; v != s; v = parent[v]) {
            u = parent[v];
            rGraph[u][v] -= path_flow;
            rGraph[v][u] += path_flow;
        }

        // Add path flow to overall flow
        max_flow += path_flow;
    }

    // Return overall flow
    return max_flow;
int main()
{
    // primer
      int graph[v][v] = { { 0, 16, 13, 0, 0, 0 }, { 0, 0, 10, 12, 0, 0 },
            { 0, 4, 0, 0, 14, 0 },  { 0, 0, 9, 0, 0, 20 },
            { 0, 0, 0, 7, 0, 4 },   { 0, 0, 0, 0, 0, 0 } };

    cout << "max flow:"
         << fordFulkerson(graph, 0, 5);

    return 0;
}